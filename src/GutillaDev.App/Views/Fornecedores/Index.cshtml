@using GutillaDev.App.Extensions;
@model IEnumerable<GutillaDev.App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Listagem de Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Novo Fornecedor</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @this.FormataDocumento(item.TipoFornecedor, item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-center">
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></a>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>
